<?xml version="1.0" encoding="UTF-8" ?>
<ScrollView
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xsi:noNamespaceSchemaLocation="layout.xsd"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

><LinearLayout android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:padding="20dp">

        <LinearLayout android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_width="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="双押: "/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:tag="doubleBet"
                      android:text="10-10"
                      android:hint="请输入双押 格式：10-10"/>

        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_width="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="倍跟: "/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:tag="singleDeposit"
                      android:text="1-3-7-16-34-73-153-318-668-1398-2830-5690-11410"
                      android:hint="请输入倍跟 格式：1-2-5-12"/>

        </LinearLayout>

        <TextView android:layout_width="wrap_content"
              android:layout_height="20dp"
              android:text=""/>

        <LinearLayout android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_width="match_parent">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="连输: "/>

            <EditText android:layout_width="50dp"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:tag="follow"
                      android:text="3"
                      android:hint="几"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="局没中等待"/>
            <EditText android:layout_width="50dp"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:tag="continuous"
                      android:text="3"
                      android:hint="几"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="连后再次下注"/>

        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:text=""/>


        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:orientation="horizontal">
<!--                      android:gravity="center"-->

                <RadioGroup android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal">

                    <RadioButton android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:tag="demoMode"
                                 android:checked="true"
                                 android:text="演示模式"/>

                    <TextView android:layout_width="50dp"
                              android:layout_height="wrap_content"
                              android:text=""/>

                    <RadioButton android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:tag="combatMode"
                                 android:checked="false"
                                 android:text="实战模式"/>
                </RadioGroup>
        </LinearLayout>


    <CardView>
        <LinearLayout android:orientation="vertical">
            <ImageView
                    android:src="https://upload.jianshu.io/users/upload_avatars/4321745/406ef6d9-28c1-4f35-8cee-37818cc404af.jpg"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="CENTER_CROP"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#669999"
                        android:textSize="14dp"

                        android:text="声明：开发此软件仅供学习交流，请勿用于违法犯罪用途，使用本软件造成的损失与软件作者无关，运行本软件即表示你已知晓并同意本协议!"/>
        </LinearLayout>
    </CardView>
</LinearLayout>

</ScrollView>